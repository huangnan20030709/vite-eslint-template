{
  "compilerOptions": {
    "target": "es6",
    "strictNullChecks": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "src/typings",
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "./**/*.d.ts",
  ],
  "exclude": [
    "node_modules",
    ".eslintrc.js",
    "dist",
    "tailwind.config.js",
    "src/*.js"
  ]
}
